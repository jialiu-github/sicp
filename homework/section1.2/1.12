(define (recursive-triangle x y)
    (cond ((< x 3) 1)
          ((= y 1) 1)
          ((= x y) 1)
          (else (+ (recursive-triangle (- x 1) (- y 1))
                    (recursive-triangle (- x 1) y)))))

(recursive-triangle 3 1)
(recursive-triangle 3 2)
(recursive-triangle 4 2)
(recursive-triangle 4 3)
(recursive-triangle 5 3)
